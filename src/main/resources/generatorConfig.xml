<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!--
            配置链接数据库的内容driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql:///pet_hospital"
                        userId="root"
                        password="admin"
        -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql:///vue"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--实体类位置-->
        <javaModelGenerator targetPackage="com.example.vue_0325.demo.entity" targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <!--mapper映射文件位置-->
        <sqlMapGenerator targetPackage="mapper"  targetProject="./src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>
        <!--mapper接口位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.vue_0325.demo.mapper"
                             targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 用户权限角色 -->
        <!--逆向工程必写-->
        <table tableName="sys_user" ></table>
        <table tableName="sys_role" ></table>
        <table tableName="sys_user_role" ></table>
        <table tableName="sys_menu" ></table>
        <table tableName="sys_role_menu"></table>

        <!--编写数据库文档-->
        <table tableName="sys_log"></table>
        <table tableName="schedule_job"></table>
        <table tableName="schedule_job_log"></table>
        <table tableName="sys_config"></table>

        <table tableName="tb_user"></table>
        <table tableName="tb_token"></table>






    </context>
</generatorConfiguration>